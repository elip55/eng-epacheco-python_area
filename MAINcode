# area with functions

import math

def explain ():     # Explain what the program is going to do 
    print("Hello.")
    print("This program will tell you the area of a circle")


def calculate(c):   # Function will calculate the area here
    area = 3.14159*pow(c,2)
    print("The are of the circle is: ")
    print(area)

def calculate_t(b,h):
    area = 0.5*b*h 
    print("The area of the triangle is: ")
    print(area)

def calculate_s(s): # This function will calculate the area of the sphere 
    area = 3.14159*4*pow(s,2)
    volume = 3.14159*1.3333333*pow(s,3)
    print("The surface area of the sphere is: ")
    print(area)
    print("The volume of the sphere is: ")
    print(volume)


explain()
c = int(input("Input the radius of the circle: "))
s = int(input("Input the radius of the sphere: "))
b = int(input("Input the base of the triangle: "))
h = int(input("Input the height of the triangle: "))
calculate(c)
calculate_s(s)
calculate_t(b,h)
